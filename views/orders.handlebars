<!DOCTYPE html>
<html>

<head>
  <title>Online Art Gallery Database</title>
  <meta charset="UTF=8">
  <link rel="stylesheet" href="stylesheet.css" type="text/css">
</head>

<body class="body" id="ordersBody">

  <button class="homeButton" type="button" onclick="location.href='/'">HOME</button>

  <h1>Orders Results:</h1>

  <!--Display our current data table-->
  <table id="currentTable">
    <th>Order ID</th>
    <th>Customer ID</th>
    <th></th>
    <th></th>
    
    {{#each dataList}}
    <tr id="newRow">
      <td id="orderID">{{this.orderID}}</td>
      <td id="customerID">{{this.customerID}}</td>

      <td><button type="button" onclick="deleteRow('currentTable',this)">Delete</button></td>
      <td><button type="button" onclick="location.href='__________'+{{this.orderID}}">Update</button>
      </td>
    </tr>
    {{/each}}
  </table>



  <!-- If no information in table, show text saying no information -->
  <h3 id="noDataTag"></h3>

  <br><br>

  <form>
    <fieldset>
      <legend>Add an Order</legend>
      <label>(Order ID will auto-populate) </label><br>
      <label for="customerIDLabel">Customer ID: </label>
      <input type="text" name="customerIDForm" id="customerIDForm"></input>
      <br>
      <div id="orderAdderButton">
      </div>

      <!-- display any missing NOT NULL items -->
      <div><b id="addErrorNameCustomerID"></b></div>

      <!-- display successfull add comment -->
      <span id="addSuccess"></span>
    </fieldset>
  </form>

  <script src="ordersScript.js"></script>
</body>

</html>