<!DOCTYPE html>
<html>

<head>
  <title>Online Art Gallery Database</title>
  <meta charset="UTF=8">
  <link rel="stylesheet" href="stylesheet.css" type="text/css">
</head>

<body class="body" id="artistsBody">

  <button class="homeButton" type="button" onclick="location.href='/'">HOME</button>

  <h1>Artists Results:</h1>
  <br>

  <!--Display our current data table-->
  <table id="currentTable">
    <th>Artist ID</th>
    <th>First Name</th>
    <th>Last Name</th>

    {{#each dataList}}
    <tr id="newRow">
      <td id="artistID">{{this.artistID}}</td>
      <td id="artistFirstName">{{this.artistFirstName}}</td>
      <td id="artistLastName">{{this.artistLastName}}</td>

      <td><button type="button" onclick="deleteRow('currentTable',this)">Delete</button></td>
      <td><button type="button" onclick="location.href='__________'+{{this.artistID}}">Update</button>
      </td>
    </tr>
    {{/each}}
  </table>


  <!-- If no information in table, show text saying no information -->
  <h3 id="noDataTag"></h3>

  <br><br>

  <form>
    <fieldset>
      <legend>Add an Artist</legend>
      <label for="artistFirstNameLabel">Artist First Name: </label>
      <input type="text" name="artistFirstNameForm" id="artistFirstNameForm"></input>
      <br>
    <label for="artistLastNameLabel">Artist Last Name: </label>
      <input type="text" name="artistLastNameForm" id="artistLastNameForm"></input>
      <br>
      <div id="artistAdderButton">
      </div>

      <!-- display any missing NOT NULL items -->
      <div><b id="addErrorName"></b></div>

      <!-- display successfull add comment -->
      <span id="addSuccess"></span>
    </fieldset>
  </form>

  <script src="artistsScript.js"></script>
</body>

</html>